{
  "name": "@guslen90/test-semantic-release-config",
  "version": "2.1.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && tsc",
    "test": "rimraf coverage && jest",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run --branches $(git branch) --repository-url $(git remote get-url origin)",
    "fix": "npm run lint && npm run fmt",
    "check": "npm run lint:check && npm run fmt:check",
    "lint": "eslint --max-warnings 0 --fix '**/*.{ts,mts,js}'",
    "fmt": "prettier --write '**/*.{md,json,yml}'",
    "lint:check": "eslint --max-warnings 0 '**/*.{ts,mts,js}'",
    "fmt:check": "prettier --check '**/*.{md,json,yml}'"
  },
  "keywords": [],
  "author": "Gustav Lennart Voigt",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/guslen/test-semantic-release-config.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "11.0.1",
    "@types/jest": "29.5.8",
    "@types/node": "20.9.1",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "eslint": "8.53.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "prettier": "3.1.0",
    "rimraf": "5.0.5",
    "semantic-release": "22.0.8",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "tagFormat": "v${version}",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "./*.tgz",
              "label": "Package"
            }
          ]
        }
      ]
    ]
  }
}
